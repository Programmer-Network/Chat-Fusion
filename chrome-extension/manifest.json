{
    "manifest_version": 3,
    "name": "Chat Fusion",
    "description": "Chat Fusion for Streamers",
    "action": {
        "default_popup": "./dist/popup.html",
        "default_title": "Chat Fusion"
    },
    "version": "1.0",
    "permissions": ["webRequest", "tabs"],
    "minimum_chrome_version": "1",
    "content_scripts": [
        {
            "matches": [
                "*://*.kick.com/*",
                "*://*.twitch.tv/*",
                "*://*.youtube.com/*"
            ],
            "js": ["./dist/content.js"]
        }
    ],
    "background": {
        "service_worker": "./dist/background.js"
    }
}
